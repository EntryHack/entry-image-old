{
  "manifest_version": 2,
  "name": "entry-image",
  "version": "1.0",
  "description": "엔트리 커뮤니티에 이미지를 올려보세요!",
  "icons": {
    "48": "icons/icon-48.png",
    "1024": "icons/icon-1024.png"
  },
  "content_scripts": [
    {
      "matches": ["https://playentry.org/community/entrystory/*"],
      "js": ["entry-image.js"],
      "css": ["styles.css"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": ["https://playentry.org/*", "http://entryimage.dothome.co.kr/*", "tabs"],
  "applications": {
    "gecko": {
      "id": "entry-image@tica.fun"
    }
  }
}
